<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:weightSum="10"
    tools:context=".CustomerLoginRegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:id="@+id/customerStatusId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Customer Login"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight=".5"/>

        <EditText
            android:id="@+id/customerEmailId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Email Id"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/customerPasswordId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/customerLoginId"
            android:textAllCaps="false"
            android:text="Log In"
            android:textSize="25sp"
            android:background="#d6d32e"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/customerNeedAccId"
            android:textAllCaps="false"
            android:text="Don't have Account?"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"/>

        <Button
            android:id="@+id/customerRegisterId"
            android:textAllCaps="false"
            android:text="Register"
            android:visibility="invisible"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ff0000"/>

    </LinearLayout>

</LinearLayout>